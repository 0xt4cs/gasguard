{
    "name": "iot-gas-leak-detection",
    "version": "1.0.0",
    "description": "IoT-Based Gas Leak Detection with Integrated Fire Department & Homeowner Alert System",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "dev-windows": "set NODE_ENV=development&& nodemon server.js",
        "dev-full": "concurrently \"npm run dev-windows\" \"npm run build-css\"",
        "dashboard": "node server-simple.js",
        "build-css": "npx @tailwindcss/cli -i ./public/styles.css -o ./public/output.css --watch",
        "build-css-prod": "npx @tailwindcss/cli -i ./public/styles.css -o ./public/output.css --minify",
        "generate-data": "node scripts/generate-test-data.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "iot",
        "gas-detection",
        "raspberry-pi",
        "safety",
        "alert-system"
    ],
    "author": "Jushtine Kylle Taculad <https://github.com/0xt4cs>",
    "license": "GPL-3.0",
    "dependencies": {
        "@serialport/parser-readline": "^12.0.0",
        "axios": "^1.6.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "moment-timezone": "^0.5.43",
        "node-cron": "^3.0.3",
        "onoff": "^6.0.3",
        "serialport": "^12.0.0",
        "socket.io": "^4.7.4",
        "spi-device": "^3.1.0",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "daisyui": "^5.1.26",
        "nodemon": "^3.0.2",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.14"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
